<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="HostMapper">

<!-- admin 회원가입  x  -->
	
	<!-- 회원정보 조회 -->
	<select id="getAdmin" resultType="admin">
		SELECT * FROM admin
		WHERE email=#{email}
	</select>

	<!-- 회원정보 변경 -->
	<update id="updateAdmin">
		UPDATE admin SET pwd=#{pwd}, name=#{name}, phone=#{phone} where email=#{email}
	</update>
	
	<!-- 이름, 번호로 이메일 찾기 -->
	<select id="selectEmailByNamePhone" resultType="String">
		SELECT email FROM admin
		WHERE name=#{name}, phone=#{phone}
	</select>
	
	<!-- 이메일, 이름, 번호로 비밀번호 찾기 -->
	<select id="selectPwdByEmailNamePhone" resultType="String">
		SELECT pwd FROM admin
		WHERE email=#{email}, name=#{name}, phone=#{phone}
	</select>
	
	
	
</mapper>
