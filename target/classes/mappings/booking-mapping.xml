<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="BookingMapper">

	<!-- 예약번호 생성 -->
	<select id="selectMaxBseq" resultType="int">
		<!-- MAX(bseq)의 값이 null이 아니면 첫번째 값, null이면 두번째 값을 채택함 -->
		SELECT NVL2(MAX(bseq),MAX(bseq)+1,1) FROM booking
	</select>
	
	<!-- 예약하기 -->
	<insert id="insertBooking">
		INSERT INTO booking(bseq, rseq, email, checkin, checkout, price, payment, status)
		VALUES(#{bseq}, #{resq}, #{email}, #{checkin}, #{checkout}, #{price}, #{payment}, #{status})
	</insert>
	
	<!-- 자신의 예약내역 조회 -->
	<select id="listBookByEmail" resultType="booking">
		SELECT * FROM booking_view
		WHERE memail=#{memail}
	</select>
	
	<!-- aseq로 예약내역 조회 -->
	<select id="listBookByAseq" resultType="booking">
		SELECT * FROM booking_view
		WHERE aseq=#{aseq}
	</select>
	
	
	<!-- 예약번호로 예약내역 조회 -->
	<select id="selectBookByBseq" resultType="booking">
		SELECT * FROM booking_view
		WHERE bseq=#{bseq}
	</select>
	
	<!-- 예약번호별로 예약내용 조회 -->
	<select id="selectSeqBooking" resultType="int">
		SELECT distinct(bseq) FROM booking_view
		WHERE memail=#{memail} 
		AND status LIKE '%'||#{status}||'%'
		ORDER BY bseq DESC
	</select>
	
	<!-- 예약번호로 예약수정 -->
	<update id="updateBookByBseq">
		UPDATE booking SET status=1
		WHERE bseq=#{bseq}
	</update>
	
	<!-- 예약번호로 예약취소 -->
	<delete id="deleteBookByBseq">
		DELETE booking WHERE bseq=#{bseq}
	</delete>
	
	<!-- 전체 예약 내역 조회 -->
	<select id="getListBooking" resultType="booking">
		SELECT * FROM booking ORDER BY bseq DESC
	</select>

     <resultMap type="com.ezen.biz.dto.SalesQuantity" id="salesMap">
 
	 <result column="aname" property= "aname"/>
	 <result column="bprice" property= "bprice"/>
	 </resultMap>
 
    <!--판매실적 -->
    <select id="getListBookingSales" resultMap="salesMap">
        SELECT aname ,sum(bprice) as sales_count FROM booking_view where hemail=#{hemail} GROUP BY aname
     </select>
	

</mapper>
